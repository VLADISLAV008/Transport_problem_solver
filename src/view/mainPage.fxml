<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.Controller">
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Open file"/>
                <SeparatorMenuItem/>
                <MenuItem text="Exit"/>
            </Menu>
            <Menu text="Language">
                <fx:define>
                    <ToggleGroup fx:id="group"/>
                </fx:define>
                <RadioMenuItem text="Russia" toggleGroup="$group"/>
                <RadioMenuItem text="English" selected="true" toggleGroup="$group"/>
            </Menu>
            <Menu text="Help"/>
        </MenuBar>
    </top>

    <center>
        <GridPane hgap="20" vgap="15">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            <Label fx:id="fileName" text="File not uploaded" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <GridPane.halignment>center</GridPane.halignment>
                <font>
                    <Font name="System Italic" size="12.0"/>
                </font>
            </Label>

            <Button onAction="#loadFile" text="Load file" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <GridPane.halignment>center</GridPane.halignment>
            </Button>

            <Button onAction="#solveProblem" text="Solve" GridPane.columnIndex="2" GridPane.rowIndex="3">
                <GridPane.halignment>center</GridPane.halignment>
            </Button>

            <Label text="Problem solve" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="4">
                <padding>
                    <Insets bottom="5" top="5"/>
                </padding>
                <GridPane.halignment>center</GridPane.halignment>
                <font>
                    <Font name="System Bold" size="12.0"/>
                </font>
            </Label>

            <Label text="Total cost of transportation: " textAlignment="CENTER" GridPane.columnIndex="1"
                   GridPane.rowIndex="5">
                <GridPane.halignment>center</GridPane.halignment>
            </Label>
            <Label fx:id="totalCost" GridPane.columnIndex="2" GridPane.rowIndex="5"/>

            <Label text="Transport matrix of transportation: " textAlignment="CENTER" GridPane.columnIndex="1"
                   GridPane.rowIndex="6">
                <GridPane.halignment>center</GridPane.halignment>
            </Label>
            <GridPane fx:id="transportMatrix" hgap="10" vgap="10" GridPane.columnIndex="2" GridPane.columnSpan="4"
                      GridPane.rowIndex="6"/>
        </GridPane>
    </center>
</BorderPane>
